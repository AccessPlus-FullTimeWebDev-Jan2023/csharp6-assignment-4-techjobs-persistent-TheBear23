@using TechJobs6Persistent.ViewModels
@model AddEmployerViewModel

<h1>Add New Employer</h1>

<form asp-controller="Employer" asp-action="ProcessCreateEmployerForm" method="post">

    <div class="form-group">
        <label>Employer Name</label>
        <input asp-for="Name" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>

    <br />

    <div class="form-group">
       <label>Employer Location</label>
        <input asp-for="Location" />
        <span asp-validation-for="Location" class="text-danger"></span>    
    </div>

    <br />

    <input type="submit" value="Add Employer" />

</form>

<div class="form-group">
    <label>Employer</label>
    <select asp-for="EmployerId" asp-items="@Model.Employers">
        <option value="">-- Select an Employer --</option>
    </select>
    <a asp-controller="Employer" asp-action="Add" class="btn btn-link">Add New Employer</a>
</div>